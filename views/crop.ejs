    <main>
        <section class="crop">
            <div class="crop-image">
                <img src="../public/images/rice.jpg"/>
            </div>
            <div class="crop-details">
                <h1>Rice Seeds</h1>
                <div>
                    <p style="margin-bottom: 0; padding: 0;"><strong>Price: </strong>$20 (per kg)</p>
                    <p style="margin-top: 0; padding: 0; color: grey;">(inclusive of all taxes)</p>
                </div>

                <div class="crop-buttons">
                    <button class="btn btn-success buy" type="submit">Buy Now</button>
                    <div class="crop-details-buttons">
                        <button id="nutrition" type="button" class="btn btn-success">Pesticides</button>
                        <button id="fertilizers" type="button" class="btn btn-success">Fertilizers</button>
                    </div>
            </div>
            </div>
        </section>
        <div class="crop-requirements">       
            <% if (locals.status === "climate") { %>
                <h3>Climate</h3>
                <p><strong>Temperatures:</strong> 20ºC to 35ºC</p>
                <p><strong>Rainfall:</strong> 1000-1500mm(39-59 inches)</p>
            <% } else if (locals.status === "pesticides") { %>
                <h3>Pesticides</h3>
                <p><strong>Insecticides:</strong> Chlorpyrifos, Carbofuran, Imidacloprid</p>
                <p><strong>Fungicides:</strong> Propiconazole, Tricyclazole, Azoxystrobin</p>
                <p><strong>Herbicides:</strong> 2,4-D (2,4-Dichlorophenoxyacetic acid), Butachlor, PretilachlorPretilachlor</p>
            <% } else if (locals.status === "fertilizers") { %> -->
                <h3>Fertilisers</h3>
                <p><strong>Nitrogen (N): </strong><a href="">Urea</a>, <a href="">Ammonium sulfate</a>, <a href="">Ammonium nitrate</a></p>
                <p><strong>Phosphorus (P): </strong><a href="">Diammonium phosphate (DAP)</a>, <a href=""> Single superphosphate (SSP)</a></p>
                <p><strong>Potassium (K): </strong><a href="">Muriate of Potash (Potassium chloride)</a>, <a href="">Sulfate of Potash (Potassium sulfate)</a></p>
                <p><strong>Micronutrients: </strong><a href="">Zinc sulfate</a>, <a href="">Ferrous sulfate</a></p>
            <% } else if (locals.status === "seeds") { %>
                <h3>Seeds</h3>
                <p><strong>Certified Seeds</strong></p>
                <p><strong>Hybrid Seeds</strong></p>
                <p><strong>Varietal Seeds</strong></p>
                <p><strong>Foundation Seeds</strong></p>
                <p><strong>Breeder Seeds</strong></p>
                <p><strong></strong></p>
            <% } %>
        </div>
    </main>


